<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Login or Create an Account</title>
    </head>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Login or Create an Account</argument>
            </action>
        </referenceBlock>

        <referenceContainer name="customer.login.container">
            <block class="Magento\Customer\Block\Form\Login\Info" name="customer.new" template="newcustomer.phtml" before="customer_form_login"></block>
        </referenceContainer>
    </body>
</page>
