<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">

    <head>
        <script src="Magento_Theme::js/cloud-zoom.1.0.2.js"/>
        <script src="Magento_Theme::js/jquery.cloudzoom.min.js"/>
        <script src="Magento_Theme::js/jquery.owlcarousel.min.js"/>
    </head>

    <body>
        <referenceBlock name="product-view-wrapper" class="CustomConcepts\Base\Block\ProductView" template="Magento_Catalog::product/view.phtml" />
        <referenceBlock name="product.price.final" remove="true"/>
        <referenceBlock name="product.info.stock.sku" remove="true"/>

        <referenceBlock name="product.attributes">
            <arguments>
                <argument translate="true" name="title" xsi:type="string">Additional Info</argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
