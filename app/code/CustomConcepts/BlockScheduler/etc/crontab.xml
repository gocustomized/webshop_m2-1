<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
    <group id="default">
        <job name="cc_block_scheduler_activate" instance="CustomConcepts\BlockScheduler\Model\BlockScheduler" method="activateBlocks">
            <schedule>0 */1 * * *</schedule>
        </job>
        <job name="cc_block_scheduler_deactivate" instance="CustomConcepts\BlockScheduler\Model\BlockScheduler" method="deactivateBlocks">
            <schedule>0 */1 * * *</schedule>
        </job>
    </group>
</config>
