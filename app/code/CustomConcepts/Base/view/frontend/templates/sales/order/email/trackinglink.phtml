<?php
$order = $this->getOrder();
$storeId = $order->getStoreId();
$transsmart_final_service_level_ids = explode(',', $this->getTrackAndTraceIds());
$shipmentCollection = $order->getShipmentsCollection();
?>
<?php foreach ($shipmentCollection as $shipment): ?>
    <?php
        $tracking_url = $shipment->getTranssmartTrackingUrl() ?: '';
