<script type="text/javascript">
    jQuery(document).ready(function () {
        jQuery(".team-member").each(function (index) {

        });
        jQuery(".view-team").click(function () {
            jQuery(this).toggleClass('open');

            jQuery('.slide-up').slideToggle('slow');
        });

        // Optimalisation: Store the references outside the event handler:
        var $window = jQuery(window);

        function checkWidth() {
            var windowsize = $window.width();
            jQuery('.slide-up').removeClass('slide-up').show();
            jQuery(".team-member").each(function (index) {
                if (windowsize < 768 && index > 2) {
                    jQuery(this).addClass('slide-up').hide();

                } else {

                    if (index > 4) {
                        jQuery(this).addClass('slide-up').hide();
                    }
                }
            });

        }
        checkWidth();
        jQuery(window).resize(checkWidth);
    });
</script>

